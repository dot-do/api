{
  "name": "@dotdo/api",
  "version": "0.1.0",
  "description": "Core API framework for building Hono-based APIs on Cloudflare Workers with conventions, middleware, and MCP tools",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./snippets/*": "./snippets/*"
  },
  "files": [
    "dist",
    "snippets"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "hono": "^4.7.0"
  },
  "optionalDependencies": {
    "@dotdo/documentdb": "^0.1.0",
    "@electric-sql/pglite": "^0.3.15",
    "oauth.do": "^0.2.2",
    "postgres.do": "^0.1.0",
    "rpc.do": "*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250124.0",
    "esbuild": "^0.24.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "hono",
    "cloudflare",
    "workers",
    "api",
    "framework",
    "dotdo",
    "mcp",
    "middleware"
  ],
  "license": "MIT"
}
